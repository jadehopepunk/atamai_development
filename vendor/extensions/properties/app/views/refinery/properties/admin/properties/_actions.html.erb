<ul>
  <% if ::Refinery::Properties::Admin::PropertiesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.properties_admin_properties_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_properties_admin_property_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Properties::Admin::PropertiesController.sortable? && ::Refinery::Properties::Property.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Properties"),
                 refinery.properties_admin_properties_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Properties"),
                 refinery.properties_admin_properties_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
